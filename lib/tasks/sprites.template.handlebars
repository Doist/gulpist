{{#block "sprites"}}
{{#each sprites}}

.cmp_{{ name }} {
  background: url({{{image}}}) 0 0 no-repeat;
  background-size: {{ total_width }}px, {{ total_height }}px;
  background-position: {{px.offset_x}} {{px.offset_y}};
  width: {{px.width}};
  height: {{px.height}};
}
{{/each}}

@media (-webkit-min-device-pixel-ratio: 2), (min-resolution: 192dpi) {
{{#each retina_groups}}
    .cmp_{{ normal.name }} {
      background: url({{{retina.image}}}) 0 0 no-repeat;
      background-size: {{ normal.total_width }}px, {{ normal.total_height }}px;
      background-position: {{normal.px.offset_x}} {{normal.px.offset_y}};
      width: {{normal.px.width}};
      height: {{normal.px.height}};
    }
{{/each}}
}

{{/block}}

